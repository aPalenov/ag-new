{
  "semi": false,
  "arrowParens": "always",
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "parser": "php",
        "plugins": ["@prettier/plugin-php"],
        "phpVersion": "8.4",
        "tabWidth": 4,
        "printWidth": 120
      }
    },
    {
      "files": ["frontend/**/*.{vue,js,jsx,ts,tsx,html}"],
      "options": {
        "plugins": ["prettier-plugin-tailwindcss"]
      }
    },
    {
      "files": "*.blade.php",
      "options": {
        "printWidth": 100,
        "parser": "blade",
        "plugins": ["@shufo/prettier-plugin-blade"],
        "phpVersion": "8.4",
        "wrapAttributes": "force-expand-multiline",
        "sortHtmlAttributes": "code-guide"
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 4,
        "printWidth": 1000
      }
    }
  ]
}
